<!DOCTYPE html>
<html>
  <head>
    <title>Cisco Vlahakis</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <script src="https://www.gstatic.com/firebasejs/8.6.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.6.1/firebase-firestore.js"></script>

    <% Dir.glob('./public/css/layout/*.css').map { |path| path.gsub('./public/', '') }.each do |file| %>
      <link rel="stylesheet" type="text/css" href="/<%= file %>">
    <% end %>

  </head>
  <body>
    <!-- Upload form (ensure action points to your upload route) -->
    <form id="upload" action="/upload" method="post" enctype="multipart/form-data">
      <input type="file" name="file">
      <input type="submit" value="Upload">
    </form>

    <div id="error-container"></div>
    <div id="page"></div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/pluralize/pluralize.js"></script>

    <% ["utils", "helpers", "layout"].each do |directory| %>
      <% js_files = Dir.glob("./public/js/#{directory}/*.js").map { |path| path.gsub('./public/', '') } %>
      <% js_files.each do |file| %>
        <script type="module" src="/<%= file %>"></script>
      <% end %>
    <% end %>
  </body>
</html>
