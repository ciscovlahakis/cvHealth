<style>
  .grid-table {
    width: 100%;
    display: grid;
    grid-template-columns: <%= "repeat(#{Array(@columns).count}, 1fr) auto auto;" %>;
    gap: 1px;
    background-color: #ccc;
    margin: 30px 0px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(.25,.8,.25,1);
  }

  .grid-table > div {
    background-color: #fff;
    padding: 10px;
    text-align: left;
    transition: all 0.3s;
  }

  .grid-table > .header {
    text-align: left;
    padding-left: 10px;
    background-color: #343a40;
    color: #fff;
    font-size: 18px;
    cursor: default;
  }

  .grid-table > .icon-column:hover {
    background-color: #ddd;
    cursor: pointer;
  }

  .grid-table > .content-cell:hover {
    background-color: #ddd;
    cursor: pointer;
  }

  .grid-table i {
    color: #343a40;
    font-size: 1.5em;
    margin: 0 10px;
  }

  .button-table-container {
    display: flex;
    flex-direction: column;
  }

  .table-button {
    align-self: flex-end;
  }
</style>

<div style="display: flex;">
  <i class="<%= @icon %> fa-2x" style="margin-right: 10px;"></i>
  <div>
    <h3><%= @title %></h3>
    <% if @description && !@description.empty? %>
      <p class="description" style="margin-top: 0;"><%= @description %></p>
    <% end %>
  </div>
</div>

<div class="modal" id="modal">
  <div class="modal-content">
    <h2 id="modal-title"><%= @create_button_title %></h2>
    <div class="form-container">
      <form id="modal-form" class="<%= @resource %>-form" action="" method="post" data-resource="<%= @resource %>">
        <input type="hidden" name="id" value="">
        <% @columns.each do |column| %>
          <label for="<%= column[:id] %>"><%= column[:name] %>:</label>
          <% if column[:type] == Integer %>
            <input type="number" id="<%= column[:id] %>" name="<%= column[:id] %>">
          <% else %>
            <input type="text" id="<%= column[:id] %>" name="<%= column[:id] %>">
          <% end %>
        <% end %>

        <%= erb :"shared/recurrence" %>

        <div class="button-group">
          <button type="button" id="cancel-button">Cancel</button>
          <input type="submit" value="Create">
        </div>
      </form>
    </div>
  </div>
</div>

<div class="button-table-container">
  <button id="create-btn" class="button table-button rounded-shadow font"><i class="fas fa-plus-circle"></i> <%= @create_button_title %></button>
  <div class="grid-table rounded-shadow">
    <% Array(@columns).each do |x| %>
      <div class="header"><%= x[:name] %></div>
    <% end %>
    <div class="header icon-header"></div>
    <div class="header icon-header"></div>
    <% Array(@data).each do |x| %>
      <% Array(@columns).each do |y| %>
        <div class="content-cell" data-<%= y[:id] %>="<%= x.fetch(y[:id], '') %>">
          <%= x.fetch(y[:id], '') %>
        </div>
      <% end %>
      <div class="icon-column">
        <a class="edit-link" data-id="<%= x.fetch('id') %>"><i class="fas fa-edit"></i></a>
      </div>
      <div class="icon-column">
        <form action="/delete/<%= @resource %>" method="post">
          <input type="hidden" name="id" value="<%= x.fetch('id') %>">
          <button type="submit"><i class="fas fa-trash"></i></button>
        </form>
      </div>
    <% end %>
  </div>
</div>
