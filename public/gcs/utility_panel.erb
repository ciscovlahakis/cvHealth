<style>
  .utility-panel {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 300px;
    height: 400px;
    border: 1px solid #ccc;
    background-color: #fff;
    padding: 10px;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
  }
  .utility-header {
    width: 100%;
    border-bottom: 1px solid #ccc;
    padding: 5px;
    background-color: #f5f5f5;
    display: flex;
    justify-content: flex-end;
  }
  .utility-button {
    cursor: pointer;
    padding: 0 5px;
  }
  .expanded-utility {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100;
  }
</style>

<div class="utility-panel">
  <div class="utility-header">
    <span class="utility-button" id="minimize">_</span>
    <span class="utility-button" id="expand">[]</span>
    <span class="utility-button" id="close">X</span>
  </div>
  <!-- The utility-content class can be used to style or reference the content area -->
  <div class="utility-content" data-yield>
    <!-- Dynamic content will be inserted here -->
  </div>
</div>
