<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    width: 100%;
    margin-bottom: 20px; /* Add space below the header */
  }

  .search-tag-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    margin-right: 10px;
  }

  .search-bar {
    padding-bottom: 10px;
    position: relative;
    display: flex;
    border-bottom: 2px solid black;
    width: 100%;
  }

  .breadcrumb-container {
    display: flex;
    gap: 10px;
    margin-right: 10px;
  }

  .breadcrumb, .tag {
    display: flex;
    align-items: center;
    padding: 10px 20px;
    border: none;
    background-color: white;
    color: black;
    border-radius: 15px;
    font-size: 1rem;
    box-shadow: 0 4px 6px 0 hsla(0, 0%, 0%, 0.2);
  }

  .breadcrumb img, .tag img {
    margin-right: 5px;
  }

  .search-bar input {
    flex: 1;
    border: none;
    padding: 10px;
    outline: none;
    border-radius: 15px;
    font-size: 1rem;
    box-shadow: 0 4px 6px 0 hsla(0, 0%, 0%, 0.2);
  }

  .tag-container {
    display: flex;
    gap: 10px;
    margin-top: 10px;
  }

  #user-icon {
    position: relative;
    height: 50px;
    width: 50px;
  }

  #user-image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }

  #admin-gear,
  #super-admin-crown {
    width: 16px;
    height: 16px;
    position: absolute;
    bottom: 0;
    right: 0;
  }
</style>

<div class="header">
  <div class="search-tag-container">
    <div class="search-bar">
      <div class="breadcrumb-container">
        <span class="breadcrumb">
          <img src="https://via.placeholder.com/150" alt="Thumbnail" style="width: 20px; height: 20px; margin-right: 5px;">cv
        </span>
        <span class="breadcrumb">
          <img src="https://via.placeholder.com/150" alt="Thumbnail" style="width: 20px; height: 20px; margin-right: 5px;">cvNutrition
        </span>
        <span class="breadcrumb">
        <img src="https://via.placeholder.com/150" alt="Thumbnail" style="width: 20px; height: 20px; margin-right: 5px;">Nutritional Components
        </span>
      </div>
      <input type="search" name="search" placeholder="Search...">

    </div>
    <div class="tag-container">
      <span class="tag"><img src="https://via.placeholder.com/150" alt="Thumbnail" style="width: 20px; height: 20px; margin-right: 5px;">
        Create Nutritional Component
      </span>
      <span class="tag"><img src="https://via.placeholder.com/150" alt="Thumbnail" style="width: 20px; height: 20px; margin-right: 5px;">Tag 2</span>
    </div>

  </div>
  <div id="user-icon" data-username="<%= current_user ? current_user[:username] : '' %>" data-user-id="<%= current_user ? current_user[:id] : '' %>" data-profile-picture="<%= current_user ? current_user[:profile_picture] : '' %>" data-signed-in="<%= session.fetch("user_id", nil) ? "true" : "false" %>">
    <% if current_user %>
      <% bucket = "cisco-vlahakis.appspot.com" %>
      <img id="user-image" src="https://storage.googleapis.com/<%= bucket %>/uploads/<%= current_user[:id] %>/<%= current_user[:profile_picture] %>" style="width: 50px; height: 50px;">
      <% if current_user[:admin] && !current_user[:super_admin] %>
        <i id="admin-gear" class="fas fa-cog"></i>
      <% end %>
      <% if current_user[:super_admin] %>
        <i id="super-admin-crown" class="fas fa-crown"></i>
      <% end %>
    <% else %>
      <img id="user-image" src="https://cdn-icons-png.flaticon.com/512/149/149071.png" style="width: 50px; height: 50px;">
    <% end %>
  </div>

</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
  document.querySelector("input[name='search']").addEventListener("keyup", function(event) {
    var searchTerm = event.target.value;
    var currentRoute = window.location.pathname;

    // If the search term is empty, clear the results and return early
    if (searchTerm.trim() === '') {
      document.getElementById('results').innerHTML = '';
      return;
    }

    console.log("Search term: " + searchTerm);
    console.log("Current route: " + currentRoute);

    var url = "/search?term=" + searchTerm + "&route=" + currentRoute;
    console.log("URL: " + url);

    fetch(url)
      .then(function(response) {
        return response.json();
      })
      .then(function(data) {
        var resultsContainer = document.getElementById('results');
        if (resultsContainer) {
          resultsContainer.innerHTML = '';
        } else {
          console.log("No element with the id 'results' was found.");
        }

        if (data.length === 0) {
          resultsContainer.innerHTML = 'No results found.';
        } else {
          data.forEach(function(result) {
            var resultElement = document.createElement('div');
            if (resultElement) {
              resultElement.classList.add('result');
            } else {
              console.log("No result element was found.");
            }

            var titleElement = document.createElement('h2');
            titleElement.innerText = result.title;

            resultElement.appendChild(titleElement);
            resultsContainer.appendChild(resultElement);
          });
        }
      });
  });
});
</script>
